<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.archive.archive_project_backend.repository.CategoryMapper">
    <resultMap id="categoryMap" type="com.archive.archive_project_backend.entity.Category">
        <id property="categoryId" column="category_id"/>
        <result property="subCategory" column="category_name"/>
        <association property="mainCategory" column="main_category_name" javaType="string"/>
    </resultMap>

    <!--   @@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@@ -->

    <select id="getCategoryById" resultMap="categoryMap">
        select
            category_id,
            category_name,
            main_category_name
        from
            category_view
        where
            category_id = #{id}
    </select>
</mapper>